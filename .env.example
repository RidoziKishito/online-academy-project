# Database Configuration (PostgreSQL)
# If you use Supabase, DB_NAME is usually "postgres"
DB_HOST=your_database_host
DB_PORT=5432
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=postgres

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Application Configuration
BASE_URL=http://localhost:3000
APP_NAME=VietEdu
# PORT is set automatically by most PaaS (Render/Koyeb/Fly). Uncomment for local only.
# PORT=3000

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here_min_32_characters

# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Google reCAPTCHA v2 (Get from https://www.google.com/recaptcha/admin)
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Optional: Supabase Configuration (if using Supabase storage)
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional: Chat/Rate Limit Configuration
# CHAT_POLLING_INTERVAL=2000
# MAX_MESSAGE_LENGTH=1000
# MAX_MESSAGES_PER_PAGE=50
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_MAX_MESSAGES=30
