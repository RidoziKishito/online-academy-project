<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>VietEdu Academy</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

  <!-- SweetAlert2 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

  <!-- Google Font: Cabin -->
  <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;600;700&display=swap" rel="stylesheet">

  {{{_sections.css}}}

  <!-- Local style (optional) -->
  <link rel="stylesheet" href="/style.css">
  
  <!-- Mobile Responsive CSS -->
  <link rel="stylesheet" href="/mobile.css">
  
  <!-- Chat System CSS -->
  <link rel="stylesheet" href="/chat.css">

  <style>
    /* Sticky footer layout */
    html,
    body {
      height: 100%;
    }

    .site-wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      font-family: 'Cabin', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    main.content {
      flex: 1 0 auto;
    }

    footer {
      flex-shrink: 0;
    }

    /* Small helper for category collapse toggle button */
    .dropdown-toggle-btn {
      background: none;
      border: none;
      padding: 0.25rem 0.5rem;
      line-height: 1;
    }

    .dropdown-toggle-icon {
      font-size: 1rem;
    }

    
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary shadow">
    <div class="container-fluid px-4">

      <!-- ===== Brand ===== -->
      <a class="navbar-brand text-primary fw-bold d-flex align-items-center" href="/">
        <i class="bi bi-mortarboard-fill text-success me-2 fs-4"></i>
  <b>VietEdu Academy</b>
      </a>

      <!-- ===== Toggle Button (Mobile) ===== -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- ===== Navbar Content ===== -->
      <div class="collapse navbar-collapse" id="navbarContent">

        {{#if (or (isStudent) (not isAuthenticated))}}
        <!-- ===== Left: Student Menus ===== -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/courses"><b>Courses</b></a></li>
          <li class="nav-item"><a class="nav-link" href="/courses/allCat"><b>Category</b></a></li>
          <li class="nav-item"><a class="nav-link" href="/instructors"><b>Instructor</b></a></li>
        </ul>
        {{/if}}

        <!-- ===== Center/Right: Search ===== -->
        <form class="d-flex ms-auto me-3" role="search" method="get" action="/courses/search">
          <input class="form-control me-2" type="search" name="q" placeholder="Search" aria-label="Search" />
          <button class="btn btn-sm btn-outline-success" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </form>

        <!-- ===== Right: Auth Menu ===== -->
        <ul class="navbar-nav mb-2 mb-lg-0">

          {{#if isAuthenticated}}

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-semibold" href="#" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Welcome,
              {{#if authUser.full_name}}{{authUser.full_name}}{{else}}{{authUser.email}}{{/if}}
            </a>

            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/account/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
              <li><a class="dropdown-item" href="/account/change-pwd"><i class="bi bi-lock me-2"></i>Change Password</a></li>
              {{#if (isStudent)}}
              <li><a class="dropdown-item" href="/contact">
                <i class="bi bi-person-video2 me-2"></i> 
                Become an Instructor
                </li>
              {{/if}}
              {{#if isAdmin}}
              <li><a class="dropdown-item" href="/admin/dashboard"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</a></li>
              {{/if}}
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a class="dropdown-item text-danger" href="javascript:document.querySelector('#frmSignout').submit();">
                  <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                </a>
              </li>
            </ul>
          </li>

          <form id="frmSignout" action="/account/signout" method="post"></form>

          {{else}}

          <li class="nav-item">
            <a class="nav-link" href="/account/signup">
              <i class="bi bi-person-plus me-1"></i>Sign Up
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/account/signin">
              <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
            </a>
          </li>

          {{/if}}
        </ul>
      </div>
    </div>
  </nav>


  <!-- Page Layout -->
  <div class="site-wrapper">
    <main class="content">
      <div class="container-fluid mt-4 px-4">
        <div class="row">
          <!-- Sidebar -->
          <aside class="col-lg-3 col-md-4 col-sm-6 mb-4 sidebar-categories">
            {{#if (or (isStudent) (not isAuthenticated))}}
            <!-- Categories Card -->
            <div class="card mb-3" style="overflow: hidden;">
              <h5 class="card-header">Categories</h5>
              <div class="list-group list-group-flush">
                {{#each globalCategories}}
                  {{!-- If helper eq/hasSubCategories exist, show nested collapse, otherwise fallback to simple link --}}
                  {{#if (eq parent_category_id null)}}
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                      <a href="/courses/by-category/{{catid}}" class="text-decoration-none text-dark fw-semibold">
                        {{catname}}
                      </a>

                      {{#if (hasSubCategories catid ../globalCategories)}}
                        <button class="dropdown-toggle-btn" type="button" data-bs-toggle="collapse"
                          data-bs-target="#collapse{{catid}}" aria-expanded="false" aria-controls="collapse{{catid}}">
                          <i class="bi bi-chevron-down dropdown-toggle-icon"></i>
                        </button>
                      {{/if}}
                    </div>

                    {{#if (hasSubCategories catid ../globalCategories)}}
                      <div class="collapse ms-3 mt-1" id="collapse{{catid}}">
                        {{#each (subCategories catid ../globalCategories)}}
                          <a href="/courses/by-category/{{catid}}"
                            class="list-group-item list-group-item-action small border-0 ps-4">
                            <i class="bi bi-caret-right me-1 text-muted"></i> {{catname}}
                          </a>
                        {{/each}}
                      </div>
                    {{/if}}
                  {{/if}}
                {{/each}}
              </div>
            </div>
            {{/if}}

            <!-- Featured / Tools Card -->
            <div class="card mb-3">
              <h5 class="card-header">
                {{#if isAuthenticated}}
                  {{#if (eq authUser.role 'instructor')}}Instructor Tools{{/if}}{{#if isAdmin}}Admin Navigation{{else}}My Learning{{/if}}
                {{else}}
                  Hi there!
                {{/if}}
              </h5>
              <div class="card-body">
                {{#if isAuthenticated}}
                  {{#if (eq authUser.role 'instructor')}}
                    <div class="d-grid gap-2 mb-3">
                      <a href="/instructor" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-speedometer2"></i> Dashboard
                      </a>
                      <a href="/instructor/create" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Create Course
                      </a>
                      <a href="/instructor/profile" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-person-badge"></i> My Profile
                      </a>
                      <a href="/instructors/{{authUser.user_id}}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-eye"></i> View Public Profile
                      </a>
                    </div>
                  {{/if}}
                  {{#if isAdmin}}
                    <div class="d-grid gap-2 mb-3">
                        <a href="/admin/categories" class="btn btn-outline-primary btn-sm">
                          <i class="bi bi-tags gap-2"></i> Category
                        </a>
                        <a href="/admin/courses" class="btn btn-outline-danger btn-sm">
                          <i class="bi bi-journal-text gap-2"></i> Courses
                          <span class="badge bg-secondary">{{wishlistCount}}</span>
                        </a>
                        <a href="/admin/accounts" class="btn btn-outline-primary btn-sm">
                          <i class="bi bi-people gap-2"></i> User
                        </a>
                        <a href="/admin/contact" class="btn btn-outline-warning btn-sm">
                          <i class="bi bi-phone gap-2"></i> Contact
                        </a>
                    </div>
                  {{/if}}
                  {{#if (isStudent)}}
                    <div class="d-grid gap-2 mb-3">
                      <a href="/student/my-courses" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-book"></i> My Courses
                      </a>
                      <a href="/student/my-wishlist" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-heart"></i> Wishlist
                        <span class="badge bg-secondary">{{wishlistCount}}</span>
                      </a>
                      <a href="/student/profile" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-person"></i> My Profile
                      </a>
                    </div>
                  {{/if}}
                {{else}}
                  <h5 class="card-title">Start Learning Today</h5>
                  <p class="card-text">Join thousands of learners worldwide.</p>
                  <a href="/account/signup" class="btn btn-primary btn-sm">Sign Up Now</a>
                {{/if}}
              </div>
            </div>

            <!-- Additional Featured Card -->
          </aside>

          <!-- Main Content -->
          <section class="col-lg-9 col-md-8 col-sm-6">
            {{{body}}}
          </section>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 border-top">
      <div class="container py-4">
        <div class="row">
          <div class="col-md-8">
            <h5 class="mb-2">About VietEdu Academy</h5>
            <p class="text-muted small mb-2">
              VietEdu Academy provides practical, project-based online courses to help learners upskill in
              programming, data, and business.
            </p>
            <p class="text-muted small mb-0">
              Our mission is to make quality education accessible to everyone.
            </p>
          </div>
          <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <h6 class="mb-2">Contact</h6>
            <p class="mb-1"><a href="/contact" class="text-decoration-none">Contact Us</a></p>
            <p class="mb-1 text-muted small">
              Address:
              <a href="https://www.google.com/maps/place/Tr%C6%B0%E1%BB%9Dng+%C4%90%E1%BA%A1i+h%E1%BB%8Dc+S%C6%B0+ph%E1%BA%A1m+K%E1%BB%B9+thu%E1%BA%ADt+Th%C3%A0nh+ph%E1%BB%91+H%E1%BB%93+Ch%C3%AD+Minh/"
                target="_blank">Số 1 Võ Văn Ngân, Thủ Đức, TP. HCM</a>
            </p>
            <p class="mb-1"><a href="/sitemap" class="text-decoration-none">Where do you want to go?</a></p>
            <p class="text-muted small mb-0">© {{currentYear}} VietEdu Academy</p>
          </div>
        </div>
      </div>
    </footer>
  </div>

  <!-- 🔹 Global Video Preview Modal -->
  <div class="modal fade" id="videoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content border-0 shadow-lg bg-dark rounded-4 overflow-hidden">
        <div class="modal-body p-0">
          <div class="ratio ratio-16x9">
            <iframe id="previewVideo"
              src=""
              title="Preview Video"
              allow="autoplay; encrypted-media"
              allowfullscreen
              referrerpolicy="strict-origin-when-cross-origin"
              style="border:0;">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const previewBtns = document.querySelectorAll('.preview-btn');
      const videoModalEl = document.getElementById('videoModal');
      const videoIframe = document.getElementById('previewVideo');

      previewBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const url = btn.dataset.video;
          if (url) {
            videoIframe.src = url.includes('?') ? url + '&autoplay=1' : url + '?autoplay=1';
            const myModal = new bootstrap.Modal(videoModalEl);
            myModal.show();
          }
        });
      });

      videoModalEl.addEventListener('hidden.bs.modal', () => {
        videoIframe.src = ''; // stop video when modal closed
      });
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>

  <!-- SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Supabase JS (for real-time features) -->
  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  
  <!-- Chat System JS -->
  <script src="/chat.js"></script>

  {{{_sections.js}}}
  
  <!-- Initialize Supabase and Chat System -->
  <script>
    // Make auth user available globally
    window.authUser = {{#if authUser}}{
      user_id: {{authUser.user_id}},
      full_name: "{{authUser.full_name}}",
      email: "{{authUser.email}}",
      role: "{{authUser.role}}"
    }{{else}}null{{/if}};
    
    // Initialize Supabase if configured
    {{#if supabaseUrl}}
    window.supabase = supabase.createClient('{{supabaseUrl}}', '{{supabaseAnonKey}}');
    {{else}}
    console.log('Supabase not configured. Real-time features disabled.');
    {{/if}}
    
    // Initialize Chat System
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof ChatSystem !== 'undefined' && window.authUser) {
        window.chatSystem = new ChatSystem();
        console.log('Chat system initialized for user:', window.authUser.full_name);
      }
    });
  </script>
</body>

</html>
