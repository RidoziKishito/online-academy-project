<script>
    // Xử lý upload video
    function wireLessonVideoUpload(lessonEl)
    {
        const lid = lessonEl.getAttribute('data-lesson-id');
        const fileInput = lessonEl.querySelector('.lesson-video-file');

        if (!fileInput) return;

        fileInput.addEventListener('change', async (e) =>
        {
            const file = e.target.files[0];
            if (!file) return;

            // Validate file size (500MB)
            if (file.size > 500 * 1024 * 1024)
            {
                alert('File quá lớn! Tối đa 500MB');
                fileInput.value = '';
                return;
            }

            // Hiển thị progress bar
            const progressContainer = lessonEl.querySelector(`[data-progress-id="${lid}"]`);
            const progressBar = progressContainer.querySelector('.progress-bar');
            progressContainer.style.display = 'block';

            // Upload file qua FormData
            const formData = new FormData();
            formData.append('video', file);

            try
            {
                const xhr = new XMLHttpRequest();

                // Theo dõi tiến trình upload
                xhr.upload.addEventListener('progress', (e) =>
                {
                    if (e.lengthComputable)
                    {
                        const percent = Math.round((e.loaded / e.total) * 100);
                        progressBar.style.width = percent + '%';
                        progressBar.textContent = percent + '%';
                    }
                });

                xhr.addEventListener('load', () =>
                {
                    if (xhr.status === 200)
                    {
                        const result = JSON.parse(xhr.responseText);
                        if (result.success)
                        {
                            // Cập nhật video URL
                            const videoInput = lessonEl.querySelector('.lesson-video');
                            if (videoInput)
                            {
                                videoInput.value = result.videoPath;
                            }

                            // Hiển thị preview
                            const previewBox = lessonEl.querySelector('.video-preview-box');
                            previewBox.innerHTML = `
                            <div class="video-preview rounded overflow-hidden">
                                <video controls style="width:100%; height:100%;">
                                    <source src="${result.videoPath}" type="video/mp4">
                                </video>
                            </div>
                        `;

                            alert('Video uploaded successfully!');
                        }
                    } else
                    {
                        alert('Upload failed! ' + xhr.responseText);
                    }
                    progressContainer.style.display = 'none';
                });

                xhr.addEventListener('error', () =>
                {
                    alert('Upload error!');
                    progressContainer.style.display = 'none';
                });

                xhr.open('POST', '/instructor/upload-video');
                xhr.send(formData);

            } catch (error)
            {
                console.error('Upload error:', error);
                alert('Failed to upload video');
                progressContainer.style.display = 'none';
            }
        });
    }

    // Wire upload on lessons when they become ready (from static js)
    const wired = new WeakSet();
    window.addEventListener('lessonReady', (e) => {
        const el = e.detail?.element;
        if (el && !wired.has(el)) {
            wireLessonVideoUpload(el);
            wired.add(el);
        }
    });
</script>