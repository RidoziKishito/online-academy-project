{{!-- Course Content Management Partial --}}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-3">
        <div>
            <h5 class="mb-1 text-success">Course Content</h5>
            <p class="text-muted small mb-0">
                {{#if totalDuration}}
                Total Duration: {{format_duration totalDuration}} •
                {{/if}}
                {{chapters.length}} chapters • {{totalLessons}} lessons
            </p>
        </div>
        <div class="d-flex gap-2">
            <button id="addChapterBtn" class="btn btn-success">
                <i class="bi bi-plus-lg me-1"></i> Add Chapter
            </button>
            <button id="autoSaveBtn" class="btn btn-outline-secondary" disabled>
                <i class="bi bi-cloud-check"></i> <span>All Changes Saved</span>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="chaptersContainer">
            {{#each chapters}}
            <div class="card chapter-card mb-3" data-chapter-id="{{chapter_id}}">
                <div class="card-header bg-light">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-2">
                            <strong class="chapter-label text-success">Chapter&nbsp;{{order_index}}</strong>
                            <input type="text" class="form-control form-control-sm chapter-title"
                                style="min-width:300px" value="{{title}}" placeholder="Enter chapter title">
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-primary add-lesson" title="Add lesson">
                                <i class="bi bi-file-plus"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary move-chapter-up" title="Move up">
                                <i class="bi bi-arrow-up-short"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary move-chapter-down" title="Move down">
                                <i class="bi bi-arrow-down-short"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger remove-chapter" title="Delete chapter">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-2">
                    <div class="lessons-list px-3">
                        {{#each lessons}}
                        <div class="lesson-row p-3 mb-2 rounded border" data-lesson-id="{{lesson_id}}">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="lesson-number rounded-circle bg-light d-flex align-items-center justify-content-center"
                                        style="width: 32px; height: 32px;">
                                        {{order_index}}
                                    </div>
                                    <input type="text" class="form-control form-control-sm lesson-title"
                                        style="width:360px" value="{{title}}" placeholder="Enter lesson title">
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-secondary move-lesson-up" title="Move up">
                                        <i class="bi bi-arrow-up-short"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary move-lesson-down" title="Move down">
                                        <i class="bi bi-arrow-down-short"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger remove-lesson" title="Delete lesson">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-2">
                                        <label class="form-label small mb-1">Video Source</label>
                                        <div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input video-source" type="radio" name="video-src-{{lesson_id}}" value="youtube" {{#if (isYouTube video_url)}}checked{{/if}}>
                                                <label class="form-check-label small">Use YouTube Link</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input video-source" type="radio" name="video-src-{{lesson_id}}" value="upload" {{#unless (isYouTube video_url)}}checked{{/unless}}>
                                                <label class="form-check-label small">Upload from Device</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="youtube-input-group mb-2" style="display: {{#if (isYouTube video_url)}}block{{else}}none{{/if}};">
                                        <label class="form-label small mb-1">YouTube URL</label>
                                        <div class="input-group input-group-sm">
                                            <input type="text" class="form-control lesson-video" value="{{video_url}}" placeholder="https://www.youtube.com/watch?v=...">
                                            <button class="btn btn-outline-secondary preview-video" title="Preview"><i class="bi bi-play"></i></button>
                                        </div>
                                    </div>

                                    <div class="upload-input-group mb-2" style="display: {{#unless (isYouTube video_url)}}block{{else}}none{{/unless}};">
                                        <label class="form-label small mb-1">Upload Video</label>
                                        <input type="file" class="form-control form-control-sm lesson-video-file" accept="video/mp4,video/quicktime,video/x-msvideo,video/x-matroska,video/webm">
                                        <div class="progress mt-2 lesson-upload-progress" style="height: 6px; display:none;">
                                            <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2 mb-2">
                                        <div class="input-group input-group-sm" style="width:150px">
                                            <input type="number" min="0" class="form-control lesson-duration"
                                                value="{{duration_seconds}}" placeholder="Duration (s)">
                                            <span class="input-group-text">sec</span>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input lesson-previewable" type="checkbox" {{#if
                                                is_previewable}}checked{{/if}}>
                                            <label class="form-check-label small">Preview enabled</label>
                                        </div>
                                    </div>
                                    <div class="video-preview-box">
                                        {{#if video_url}}
                                            {{#if (isYouTube video_url)}}
                                                <div class="video-preview rounded overflow-hidden">
                                                    <iframe src="{{getYouTubeEmbedUrl video_url}}" allowfullscreen></iframe>
                                                </div>
                                            {{else}}
                                                <div class="video-preview rounded overflow-hidden">
                                                    <video controls style="width:100%;height:100%;object-fit:contain;">
                                                        <source src="{{video_url}}">
                                                    </video>
                                                </div>
                                            {{/if}}
                                        {{else}}
                                            <div class="video-preview rounded d-flex align-items-center justify-content-center bg-light">
                                                <span class="text-muted">No preview available</span>
                                            </div>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small mb-1">Lesson Content</label>
                                    <div id="quill-{{lesson_id}}" class="quill-editor">
                                        {{{content}}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        {{#unless chapters.length}}
        <div class="text-center py-5">
            <img src="/images/empty-content.svg" alt="No content" class="mb-3" style="max-width:200px; opacity:0.5">
            <h5>No Content Yet</h5>
            <p class="text-muted">Start by adding your first chapter</p>
        </div>
        {{/unless}}
    </div>
</div>

{{!-- Templates for new chapters/lessons --}}
<template id="chapter-template">
    <div class="card chapter-card mb-3" data-chapter-id="__CHAPTER_ID__">
        <div class="card-header bg-light">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <strong class="chapter-label">Chapter __NUMBER__</strong>
                    <input type="text" class="form-control form-control-sm chapter-title" style="min-width:300px"
                        value="New Chapter" placeholder="Enter chapter title">
                </div>
                <div class="btn-group">
                    <button class="btn btn-sm btn-outline-primary add-lesson" title="Add lesson">
                        <i class="bi bi-file-plus"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary move-chapter-up" title="Move up">
                        <i class="bi bi-arrow-up-short"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary move-chapter-down" title="Move down">
                        <i class="bi bi-arrow-down-short"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger remove-chapter" title="Delete chapter">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="lessons-list"></div>
        </div>
    </div>
</template>

<template id="lesson-template">
    <div class="lesson-row p-3 border-bottom" data-lesson-id="__LESSON_ID__">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex align-items-center gap-2">
                <span class="lesson-label text-muted">Lesson __NUMBER__</span>
                <input type="text" class="form-control form-control-sm lesson-title" style="width:360px"
                    value="New Lesson" placeholder="Enter lesson title">
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-outline-secondary move-lesson-up" title="Move up">
                    <i class="bi bi-arrow-up-short"></i>
                </button>
                <button class="btn btn-sm btn-outline-secondary move-lesson-down" title="Move down">
                    <i class="bi bi-arrow-down-short"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger remove-lesson" title="Delete lesson">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="mb-2">
                    <label class="form-label small mb-1">Video Source</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input video-source" type="radio" name="video-src-__LESSON_ID__" value="youtube" checked>
                            <label class="form-check-label small">Use YouTube Link</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input video-source" type="radio" name="video-src-__LESSON_ID__" value="upload">
                            <label class="form-check-label small">Upload from Device</label>
                        </div>
                    </div>
                </div>
                <div class="youtube-input-group mb-2">
                    <label class="form-label small mb-1">YouTube URL</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control lesson-video" placeholder="https://www.youtube.com/watch?v=...">
                        <button class="btn btn-outline-secondary preview-video" title="Preview"><i class="bi bi-play-fill"></i></button>
                    </div>
                </div>
                <div class="upload-input-group mb-2" style="display:none;">
                    <label class="form-label small mb-1">Upload Video</label>
                    <input type="file" class="form-control form-control-sm lesson-video-file" accept="video/mp4,video/quicktime,video/x-msvideo,video/x-matroska,video/webm">
                    <div class="progress mt-2 lesson-upload-progress" style="height: 6px; display:none;">
                        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="d-flex gap-2 mb-2">
                    <div class="input-group input-group-sm" style="width:150px">
                        <input type="number" min="0" class="form-control lesson-duration" placeholder="Duration (s)">
                        <span class="input-group-text">sec</span>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input lesson-previewable" type="checkbox">
                        <label class="form-check-label small">Preview enabled</label>
                    </div>
                </div>
                <div class="video-preview-box">
                    <div class="video-preview rounded d-flex align-items-center justify-content-center bg-light">
                        <span class="text-muted">No preview available</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label small mb-1">Lesson Content</label>
                <div id="quill-__LESSON_ID__" class="quill-editor"></div>
            </div>
        </div>
    </div>
</template>