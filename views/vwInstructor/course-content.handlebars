{{!-- Course Content Management Partial --}}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center bg-white border-bottom-0 pt-3">
        <div>
            <h5 class="mb-1 text-success">Course Content</h5>
            <p class="text-muted small mb-0">
                {{#if totalDuration}}
                Total Duration: {{format_duration totalDuration}} •
                {{/if}}
                {{chapters.length}} chapters • {{totalLessons}} lessons
            </p>
        </div>
        <div class="d-flex gap-2">
            <button id="addChapterBtn" class="btn btn-success">
                <i class="bi bi-plus-lg me-1"></i> Add Chapter
            </button>
            <button id="autoSaveBtn" class="btn btn-outline-secondary" disabled>
                <i class="bi bi-cloud-check"></i> <span>All Changes Saved</span>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="chaptersContainer">
            {{#each chapters}}
            <div class="card chapter-card mb-3" data-chapter-id="{{chapter_id}}">
                <div class="card-header bg-light">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-2">
                            <strong class="chapter-label text-success">Chapter&nbsp;{{order_index}}</strong>
                            <input type="text" class="form-control form-control-sm chapter-title"
                                style="min-width:300px" value="{{title}}" placeholder="Enter chapter title">
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-primary add-lesson" title="Add lesson">
                                <i class="bi bi-file-plus"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary move-chapter-up" title="Move up">
                                <i class="bi bi-arrow-up-short"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary move-chapter-down" title="Move down">
                                <i class="bi bi-arrow-down-short"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger remove-chapter" title="Delete chapter">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-2">
                    <div class="lessons-list px-3">
                        {{#each lessons}}
                        <div class="lesson-row p-3 mb-2 rounded border" data-lesson-id="{{lesson_id}}">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="lesson-number rounded-circle bg-light d-flex align-items-center justify-content-center"
                                        style="width: 32px; height: 32px;">
                                        {{order_index}}
                                    </div>
                                    <input type="text" class="form-control form-control-sm lesson-title"
                                        style="width:360px" value="{{title}}" placeholder="Enter lesson title">
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-secondary move-lesson-up" title="Move up">
                                        <i class="bi bi-arrow-up-short"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary move-lesson-down" title="Move down">
                                        <i class="bi bi-arrow-down-short"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger remove-lesson" title="Delete lesson">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small mb-1">Video Source</label>

                                    <!-- Tabs để chọn giữa Upload và YouTube -->
                                    <ul class="nav nav-tabs nav-tabs-sm mb-2" role="tablist">
                                        <li class="nav-item">
                                            <button class="nav-link active" data-bs-toggle="tab"
                                                data-bs-target="#upload-{{lesson_id}}">
                                                <i class="bi bi-cloud-upload"></i> Upload
                                            </button>
                                        </li>
                                        <li class="nav-item">
                                            <button class="nav-link" data-bs-toggle="tab"
                                                data-bs-target="#youtube-{{lesson_id}}">
                                                <i class="bi bi-youtube"></i> YouTube
                                            </button>
                                        </li>
                                    </ul>

                                    <div class="tab-content">
                                        <!-- Tab 1: Upload video -->
                                        <div class="tab-pane fade show active" id="upload-{{lesson_id}}">
                                            <input type="file"
                                                class="form-control form-control-sm lesson-video-file mb-2"
                                                accept="video/*" data-lesson-id="{{lesson_id}}">
                                            <small class="text-muted d-block">Max 500MB • MP4, AVI, MOV, WMV</small>

                                            <!-- Progress bar khi upload -->
                                            <div class="progress mt-2" style="display:none; height:20px;"
                                                data-progress-id="{{lesson_id}}">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                    role="progressbar" style="width:0%">0%</div>
                                            </div>
                                        </div>

                                        <!-- Tab 2: YouTube URL -->
                                        <div class="tab-pane fade" id="youtube-{{lesson_id}}">
                                            <div class="input-group input-group-sm mb-2">
                                                <input type="text" class="form-control lesson-video"
                                                    value="{{video_url}}"
                                                    placeholder="https://www.youtube.com/watch?v=...">
                                                <button class="btn btn-outline-secondary preview-video">
                                                    <i class="bi bi-play"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Video Preview -->
                                    <div class="video-preview-box mt-2">
                                        {{#if video_url}}
                                        {{#if (isYouTube video_url)}}
                                        <div class="video-preview rounded overflow-hidden">
                                            <iframe src="{{getYouTubeEmbedUrl video_url}}" allowfullscreen></iframe>
                                        </div>
                                        {{else}}
                                        <div class="video-preview rounded overflow-hidden">
                                            <video controls style="width:100%; height:100%;">
                                                <source src="{{video_url}}" type="video/mp4">
                                            </video>
                                        </div>
                                        {{/if}}
                                        {{else}}
                                        <div
                                            class="video-preview rounded d-flex align-items-center justify-content-center bg-light">
                                            <span class="text-muted">No preview available</span>
                                        </div>
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small mb-1">Lesson Content</label>
                                    <div id="quill-{{lesson_id}}" class="quill-editor">
                                        {{{content}}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        {{#unless chapters.length}}
        <div class="text-center py-5">
            <img src="/images/empty-content.svg" alt="No content" class="mb-3" style="max-width:200px; opacity:0.5">
            <h5>No Content Yet</h5>
            <p class="text-muted">Start by adding your first chapter</p>
        </div>
        {{/unless}}
    </div>
</div>

{{!-- Templates for new chapters/lessons --}}
