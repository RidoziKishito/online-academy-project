{{#fillContent 'css'}}
<link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
<link href="https://releases.transloadit.com/uppy/v5.1.5/uppy.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{{/fillContent}}

{{#fillContent 'js'}}
<script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
<script>
    // Initialize price formatting
    new Cleave('#currentPrice', {
        numeral: true,
        numeralThousandsGroupStyle: 'thousand'
    });

    new Cleave('#originalPrice', {
        numeral: true,
        numeralThousandsGroupStyle: 'thousand'
    });

    // Initialize rich text editor
    const quill = new Quill('#editor', {
        theme: 'snow',
        placeholder: 'Write a detailed description of your course...',
        modules: {
            toolbar: [
                ['bold', 'italic', 'underline', 'strike'],
                ['blockquote', 'code-block'],
                [{ 'header': 1 }, { 'header': 2 }],
                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                [{ 'script': 'sub' }, { 'script': 'super' }],
                ['clean']
            ]
        }
    });

    // Handle form submission
    document.querySelector('#frmAddCourse').addEventListener('submit', function (e) {
        e.preventDefault();

        // Validate required fields
        const requiredFields = ['title', 'imageUrl'];
        let isValid = true;

        requiredFields.forEach(field => {
            const input = document.getElementById(field);
            if (!input.value.trim()) {
                input.classList.add('is-invalid');
                isValid = false;
            } else {
                input.classList.remove('is-invalid');
            }
        });

        // Validate description
        const description = quill.root.innerHTML;
        if (description === '<p><br></p>' || !description.trim()) {
            document.querySelector('#editor').classList.add('is-invalid');
            isValid = false;
        } else {
            document.querySelector('#editor').classList.remove('is-invalid');
        }

        if (!isValid) {
            return;
        }

        // Copy quill html to hidden input
        document.querySelector('#full_description').value = description;

        // Submit form
        this.submit();
    });

    // Image URL preview
    const imageUrlInput = document.getElementById('imageUrl');
    const imagePreview = document.getElementById('imagePreview');

    imageUrlInput.addEventListener('input', function () {
        const url = this.value;
        if (url) {
            imagePreview.src = url;
            imagePreview.style.display = 'block';
        } else {
            imagePreview.style.display = 'none';
        }
    });

    imagePreview.addEventListener('error', function () {
        this.src = '/images/placeholder-course.png';
    });
</script>
{{/fillContent}}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0"><i class="fa fa-plus-circle me-2"></i> Create New Course</h5>
                        <small class="text-muted">Fill in the information below to create a new course</small>
                    </div>
                </div>
                <div class="card-body">
                    <form id="frmAddCourse" method="post" action="/instructor/create" enctype="multipart/form-data">
                        {{#if errorMessages}}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Please check the fields below and try again.
                        </div>
                        {{/if}}

                        <div class="row mb-4">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label">Course Title <span class="text-danger">*</span></label>
                                    <input type="text" id="title" name="title" class="form-control" required
                                        placeholder="e.g. Complete Web Development Bootcamp" value="{{oldData.title}}">
                                    {{#if errorMessages.title}}
                                    <div class="invalid-feedback d-block">{{errorMessages.title.[0]}}</div>
                                    {{/if}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Course Description <span
                                            class="text-danger">*</span></label>
                                    <div id="editor" class="{{#if errorMessages.description}}is-invalid{{/if}}">
                                        {{{oldData.full_description}}}</div>
                                    <input type="hidden" id="full_description" name="full_description" />
                                    {{#if errorMessages.description}}
                                    <div class="invalid-feedback d-block">{{errorMessages.description.[0]}}</div>
                                    {{/if}}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label d-block">Course Image <span
                                            class="text-danger">*</span></label>
                                    <img id="imagePreview" class="img-fluid mb-2 rounded"
                                        style="max-height: 200px; display: none;">
                                    <input type="url" id="imageUrl" name="image_url" class="form-control" required
                                        placeholder="Enter image URL or upload below" value="{{oldData.image_url}}">
                                    {{#if errorMessages.image_url}}
                                    <div class="invalid-feedback d-block">{{errorMessages.image_url.[0]}}</div>
                                    {{/if}}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Category <span class="text-danger">*</span></label>
                                    <select name="category_id" class="form-select" required>
                                        <option value="">Select a category</option>
                                        {{#each categories}}
                                        <option value="{{this.id}}" {{#if (eq ../oldData.category_id
                                            this.id)}}selected{{/if}}>
                                            {{this.name}}
                                        </option>
                                        {{/each}}
                                    </select>
                                    {{#if errorMessages.category_id}}
                                    <div class="invalid-feedback d-block">{{errorMessages.category_id.[0]}}</div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Rating</label>
                                <input type="text" id="rating" name="rating" class="form-control" placeholder="4.5"
                                    value="{{oldData.rating}}">
                                {{#if errorMessages.rating}}<div class="text-danger small">{{errorMessages.rating.[0]}}
                                </div>{{/if}}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Total Reviews</label>
                                <input type="text" id="totalReviews" name="total_reviews" class="form-control"
                                    placeholder="150" value="{{oldData.total_reviews}}">
                                {{#if errorMessages.total_reviews}}<div class="text-danger small">
                                    {{errorMessages.total_reviews.[0]}}</div>{{/if}}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Total Hours</label>
                                <input type="text" id="totalHours" name="total_hours" class="form-control"
                                    placeholder="10.5" value="{{oldData.total_hours}}">
                                {{#if errorMessages.total_hours}}<div class="text-danger small">
                                    {{errorMessages.total_hours.[0]}}</div>{{/if}}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Total Lectures</label>
                                <input type="text" id="totalLectures" name="total_lectures" class="form-control"
                                    placeholder="45" value="{{oldData.total_lectures}}">
                                {{#if errorMessages.total_lectures}}<div class="text-danger small">
                                    {{errorMessages.total_lectures.[0]}}</div>{{/if}}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Course Level</label>
                            <select id="level" name="level" class="form-select">
                                <option value="">-- Select Level --</option>
                                <option value="Beginner" {{#if (eq oldData.level "Beginner" )}}selected{{/if}}>Beginner
                                </option>
                                <option value="Intermediate" {{#if (eq oldData.level "Intermediate" )}}selected{{/if}}>
                                    Intermediate</option>
                                <option value="Advanced" {{#if (eq oldData.level "Advanced" )}}selected{{/if}}>Advanced
                                </option>
                                <option value="All Levels" {{#if (eq oldData.level "All Levels" )}}selected{{/if}}>All
                                    Levels</option>
                            </select>
                            {{#if errorMessages.level}}<div class="text-danger small">{{errorMessages.level.[0]}}</div>
                            {{/if}}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Current Price (VND) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">₫</span>
                                    <input type="text" id="currentPrice" name="current_price" class="form-control"
                                        required placeholder="279,000" value="{{oldData.current_price}}">
                                    <div class="input-group-text bg-light">VND</div>
                                </div>
                                {{#if errorMessages.current_price}}
                                <div class="invalid-feedback d-block">{{errorMessages.current_price.[0]}}</div>
                                {{/if}}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Original Price (VND) <span
                                        class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">₫</span>
                                    <input type="text" id="originalPrice" name="original_price" class="form-control"
                                        required placeholder="399,000" value="{{oldData.original_price}}">
                                    <div class="input-group-text bg-light">VND</div>
                                </div>
                                {{#if errorMessages.original_price}}
                                <div class="invalid-feedback d-block">{{errorMessages.original_price.[0]}}</div>
                                {{/if}}
                                <div class="form-text">Set this higher than current price to show discount</div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-tags me-2"></i>Course Features</h6>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="isBestseller"
                                                name="is_bestseller" value="true" {{#if
                                                oldData.is_bestseller}}checked{{/if}}>
                                            <label class="form-check-label" for="isBestseller">
                                                <i class="fa fa-crown text-warning me-1"></i> Mark as Bestseller
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/instructor" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                            </a>
                            <div class="btn-group">
                                <button type="reset" class="btn btn-light">
                                    <i class="fas fa-undo me-1"></i> Reset
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Create Course
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>