<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <h5>{{student.full_name}}</h5>
      <small>{{student.email}}</small>
    </div>
    <a href="/instructor/manage-course/{{course.course_id}}" class="btn btn-sm btn-outline-secondary">
      ← Back to course
    </a>
  </div>

  <div class="card-body">
  <h6>Learning Progress</h6>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Chapter</th>
          <th>Lesson</th>
          <th>Status</th>
          <th>Completed at</th>
        </tr>
      </thead>
      <tbody>
        {{#each lessons}}
        <tr>
          <td>{{chapter_title}}</td>
          <td>{{lesson_title}}</td>
          <td>
            {{#if is_completed}}
              <span class="badge bg-success">Completed</span>
            {{else}}
              <span class="badge bg-secondary">Not completed</span>
            {{/if}}
          </td>
          <td>{{#if completed_at}}{{formatDate completed_at}}{{else}}—{{/if}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
