{{#fillContent 'css'}}
<style>
    .instructor-header {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .instructor-avatar {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>
{{/fillContent}}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <div class="instructor-header">
                <img class="instructor-avatar"
                    src="{{#if instructor.avatar_url}}{{instructor.avatar_url}}{{else}}/static/img/default-avatar.png{{/if}}"
                    alt="{{instructor.full_name}}" />
                <div>
                    <h3>{{instructor.full_name}}</h3>
                    <p class="text-muted">{{instructor.email}}</p>
                    {{#if instructor.bio}}<p>{{instructor.bio}}</p>{{/if}}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h5>Courses by {{instructor.full_name}}</h5>
        <div class="row">
            {{#each courses}}
            {{#unless (eq this.status 'hidden')}}
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <img src="{{image_url}}" class="card-img-top" style="height:160px;object-fit:cover"
                        alt="{{title}}" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">{{title}}</h6>
                        <p class="text-muted small mb-2">{{category_name}}</p>
                        {{#if (isStudent)}}
                        <div class="mt-auto">
                            <a href="/courses/detail/{{course_id}}" class="btn btn-sm btn-primary">View Course</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/unless}}
            {{else}}
            <div class="col-12">
                <p class="text-muted">No courses yet.</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>