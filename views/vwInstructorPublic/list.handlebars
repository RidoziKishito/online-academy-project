{{#fillContent 'css'}}
<style>
    .instructor-card img {
        width: 140px;
        height: 140px;
        object-fit: cover;
        border-radius: 50%; /* làm ảnh tròn */
        margin: 0 auto; /* căn giữa trong card */
        display: block;
    }
</style>
{{/fillContent}}

<div class="container mt-4">
    <h3 class="mb-3">Our Instructors</h3>
    <div class="row">
        {{#each instructors}}
        <div class="col-md-4 mb-3">
            <div class="card h-100 instructor-card text-center p-3">
                <img src="{{#if avatar_url}}{{avatar_url}}{{else}}/static/img/default-avatar.png{{/if}}"
                    class="card-img-top" alt="{{full_name}}">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mt-2 text-success">{{full_name}}</h5>
                    <p class="text-muted small mb-2">{{email}}</p>
                    <p class="small text-center" style="max-height:3.6rem;overflow:hidden">{{bio}}</p>
                    <div class="mt-auto">
                        <a href="/instructors/{{user_id}}" class="btn btn-sm btn-outline-primary">View profile</a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12">
            <p class="text-muted">No instructors found.</p>
        </div>
        {{/each}}
    </div>
</div>
