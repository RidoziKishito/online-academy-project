<div class="card">
    <div class="card-header">Search results for: '{{q}}'</div>
    <div class="card-body">
        {{#if empty}}
        <div class="row">
            <div class="col">
                <p>No courses match your search criteria.</p>
            </div>
        </div>
        {{else}}
        {{/if}}
        <div class="row row-gap-3">
            {{#each courses}}
            <div class="col-md-6">
                <div class="card">
                    <img src="{{#if image_url}}{{image_url}}{{else}}https://via.placeholder.com/600x400?text=No+Image{{/if}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        <h5 class="card-title text-danger">{{format_number current_price}}</h5>
                        <p class="card-text">{{description}}</p>
                        <a href="/courses/detail/{{course_id}}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i>
                            View Details
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-book"></i>
                            Enroll
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="card-footer text-muted">Footer</div>
</div>