<div class="card">
    <div class="card-header">{{category.name}}</div>
    <div class="card-body"> 
                <form id="catSortForm" method="get" class="mb-3 d-flex align-items-center gap-3">
                    <div>
                        <label class="form-label small mb-1 text-muted">Sort by</label>
                        <select name="sortBy" class="form-select form-select-sm">
                            <option value="relevance" {{#ifEq query.sortBy 'relevance'}}selected{{/ifEq}}>Relevance</option>
                            <option value="rating" {{#ifEq query.sortBy 'rating'}}selected{{/ifEq}}>Rating</option>
                            <option value="price" {{#ifEq query.sortBy 'price'}}selected{{/ifEq}}>Price</option>
                            <option value="newest" {{#ifEq query.sortBy 'newest'}}selected{{/ifEq}}>Newest</option>
                            <option value="bestseller" {{#ifEq query.sortBy 'bestseller'}}selected{{/ifEq}}>Bestseller</option>
                        </select>
                    </div>
                    <div>
                        <label class="form-label small mb-1 text-muted d-block">Order</label>
                        <select name="order" class="form-select form-select-sm">
                            <option value="desc" {{#ifEq query.order 'desc'}}selected{{/ifEq}}>Descending</option>
                            <option value="asc" {{#ifEq query.order 'asc'}}selected{{/ifEq}}>Ascending</option>
                        </select>
                    </div>
                    <div class="align-self-end">
                        <button type="submit" class="btn btn-sm btn-success">Apply</button>
                    </div>
                </form>

                {{#if empty}}
        <div class="row">
            <div class="col">
                <p>No courses in this category.</p>
            </div>
        </div>
        {{else}}
        {{/if}}
        <div class="row row-gap-3">
            {{#each courses}}
            <div class="col-md-6 col-lg-4 d-flex">
                <div class="card flex-fill h-100 shadow-sm d-flex flex-column">
                    <div style="height: 200px; overflow: hidden;">
                        {{#if image_url}}
                        <img src="{{image_url}}" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="{{title}}">
                        {{else}}
                        <img src="https://via.placeholder.com/600x400?text=No+Image" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="{{title}}">
                        {{/if}}
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="card-title mb-1">{{title}}</h4>
                            <div>
                                {{#if is_new}}<span class="badge bg-info text-dark me-1">New</span>{{/if}}
                                {{#if is_bestseller}}<span class="badge bg-warning text-dark">ðŸ”¥ Bestseller</span>{{/if}}
                            </div>
                        </div>
                        <h5 class="card-title text-danger mb-2">{{format_number current_price}}</h5>
                        <div class="card-text flex-grow-1">{{{short_description}}}</div>
                        <a href="/courses/detail/{{course_id}}" class="btn btn-sm btn-outline-primary mt-auto align-self-start">
                            <i class="bi bi-eye"></i>
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
                    {{#if pagination}}
                        <nav aria-label="Category pagination" class="mt-3">
                            <ul class="pagination justify-content-center">
                                <li class="page-item {{#if pagination.isFirst}}disabled{{/if}}">
                                    <a class="page-link" href="{{pagination.baseUrl}}page={{pagination.prevPage}}">Prev</a>
                                </li>
                                {{#each pagination.pages}}
                                    <li class="page-item {{#if this.active}}active{{/if}}">
                                        <a class="page-link" href="{{../pagination.baseUrl}}page={{this.number}}">{{this.number}}</a>
                                    </li>
                                {{/each}}
                                <li class="page-item {{#if pagination.isLast}}disabled{{/if}}">
                                    <a class="page-link" href="{{pagination.baseUrl}}page={{pagination.nextPage}}">Next</a>
                                </li>
                            </ul>
                        </nav>
                    {{/if}}
    </div>
</div>