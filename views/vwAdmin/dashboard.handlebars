<div class="container-fluid px-4 py-4">
  <!-- Page Header -->
  <div class="mb-4">
    <h1 class="h2 fw-bold text-success mb-2">
      <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
    </h1>
    <p class="text-muted mb-0">Overview of users, courses, enrollments, and reviews</p>
  </div>

  <!-- KPI Cards -->
  <div class="row g-3 mb-4">
    <div class="col-sm-6 col-lg-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 me-3">
              <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
                <i class="bi bi-people-fill fs-1"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <p class="text-muted text-uppercase small mb-1">Total Users</p>
              <h3 class="mb-1">{{metrics.usersTotal}}</h3>
              <p class="small text-success mb-0">
                <i class="bi bi-check-circle-fill me-1"></i>
                {{metrics.usersVerified}} verified
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-lg-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 me-3">
              <div class="bg-success bg-opacity-10 text-success rounded p-3">
                <i class="bi bi-person-video3 fs-1"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <p class="text-muted text-uppercase small mb-1">Instructors</p>
              <h3 class="mb-1">{{metrics.instructors}}</h3>
              <p class="small text-warning mb-0">
                <i class="bi bi-shield-fill-check me-1"></i>
                {{metrics.admins}} admins
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-lg-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 me-3">
              <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
                <i class="bi bi-mortarboard-fill fs-1"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <p class="text-muted text-uppercase small mb-1">Total Courses</p>
              <h3 class="mb-1">{{metrics.coursesTotal}}</h3>
              <p class="small text-muted mb-0">Published & drafts</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-6 col-lg-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 me-3">
              <div class="bg-info bg-opacity-10 text-info rounded p-3">
                <i class="bi bi-person-check-fill fs-1"></i>
              </div>
            </div>
            <div class="flex-grow-1">
              <p class="text-muted text-uppercase small mb-1">Enrollments</p>
              <h3 class="mb-1">{{metrics.enrollmentsTotal}}</h3>
              <p class="small text-primary mb-0">
                <i class="bi bi-star-fill me-1"></i>
                {{metrics.reviewsTotal}} reviews
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Data Tables Row -->
  <div class="row g-3">
    <!-- Top Courses -->
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-trophy-fill text-warning me-2"></i>
            Top Courses by Enrollment
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-3">ID</th>
                  <th>Title</th>
                  <th>Instructor</th>
                  <th class="text-center">Enrollments</th>
                  <th class="text-center">Views</th>
                  <th class="text-center pe-3">Rating</th>
                </tr>
              </thead>
              <tbody>
                {{#if topCourses}}
                  {{#each topCourses}}
                    <tr>
                      <td class="ps-3">
                        <a href="/courses/detail/{{course_id}}" class="text-decoration-none fw-semibold">
                          #{{course_id}}
                        </a>
                      </td>
                      <td>
                        <span class="fw-semibold">{{title}}</span>
                      </td>
                      <td class="text-muted">
                        {{#if instructor_name}}
                          <i class="bi bi-person-fill me-1"></i>{{instructor_name}}
                        {{else}}
                          <span class="text-muted fst-italic">Not assigned</span>
                        {{/if}}
                      </td>
                      <td class="text-center">
                        <span class="badge bg-primary">{{enrollment_count}}</span>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-info">{{view_count}}</span>
                      </td>
                      <td class="text-center pe-3">
                        {{#if rating_avg}}
                          <span class="badge bg-warning text-dark">
                            <i class="bi bi-star-fill"></i> {{rating_avg}} ({{rating_count}})
                          </span>
                        {{else}}
                          <span class="text-muted small">No ratings</span>
                        {{/if}}
                      </td>
                    </tr>
                  {{/each}}
                {{else}}
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      <i class="bi bi-inbox fs-1 mb-2 d-block opacity-50"></i>
                      No courses found
                    </td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Users -->
    <div class="col-lg-4">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0">
            <i class="bi bi-clock-history text-primary me-2"></i>
            Recent Users
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-3">ID</th>
                  <th>User</th>
                  <th class="text-center pe-3">Status</th>
                </tr>
              </thead>
              <tbody>
                {{#if recentUsers}}
                  {{#each recentUsers}}
                    <tr>
                      <td class="ps-3">
                        <span class="badge bg-secondary">{{user_id}}</span>
                      </td>
                      <td>
                        <div class="fw-semibold">
                          {{#if full_name}}{{full_name}}{{else}}{{email}}{{/if}}
                        </div>
                        <div class="small text-muted">{{email}}</div>
                        <div class="mt-1">
                          {{#if (eq role 'admin')}}
                            <span class="badge bg-danger">Admin</span>
                          {{else if (eq role 'instructor')}}
                            <span class="badge bg-success">Instructor</span>
                          {{else}}
                            <span class="badge bg-secondary">Student</span>
                          {{/if}}
                        </div>
                      </td>
                      <td class="text-center pe-3">
                        {{#if is_verified}}
                          <span class="badge bg-success">
                            <i class="bi bi-check-lg me-1"></i>Verified
                          </span>
                        {{else}}
                          <span class="badge bg-warning text-dark">
                            <i class="bi bi-clock me-1"></i>Pending
                          </span>
                        {{/if}}
                      </td>
                    </tr>
                  {{/each}}
                {{else}}
                  <tr>
                    <td colspan="3" class="text-center text-muted py-4">
                      <i class="bi bi-person-x fs-1 mb-2 d-block opacity-50"></i>
                      No users found
                    </td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

