{{!-- Admin Accounts List --}}
<div class="container py-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Accounts</h4>
      <a class="btn btn-primary" href="/admin/accounts/edit">
        <i class="bi bi-person-plus"></i> Create New
      </a>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Full name</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{this.user_id}}</td>
            <td>{{this.full_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td class="text-end">
              <a class="btn btn-sm btn-outline-secondary" href="/admin/accounts/edit?id={{this.user_id}}">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
