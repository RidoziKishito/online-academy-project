<div class="container">
    <h2 class="mb-4"><span class="text-danger"><i class="bi bi-heart-fill"></i> Wishlist</span></h2>
    {{#if courses}}
        <div class="row">
            {{#each courses}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{image_url}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{brief_description}}</p>
                        <p class="text-primary fw-bold">{{price_formatted}}</p>
                        <div class="d-flex justify-content-start gap-3">
                            <a href="/courses/detail/{{course_id}}" class="btn btn-outline-primary">
                            <i class="bi bi-check"></i>
                            Detail
                            </a>
                            <button class="btn btn-outline-danger remove-wishlist" data-course-id="{{course_id}}">
                                <i class="bi bi-trash-fill"></i>  Remove
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    {{else}}
        <div class="text-center py-5">
            <i class="bi bi-heart" style="font-size: 5rem; color: #dee2e6;"></i>
            <h3 class="mt-3 text-muted">No courses yet</h3>
            <p class="text-muted">Start your learning journey today!</p>
            <a href="/courses" class="btn btn-primary btn-lg">
                Explore Courses
            </a>
        </div>
    {{/if}}
</div>

<script>
// Xử lý xóa khỏi wishlist
document.querySelectorAll('.remove-wishlist').forEach(btn => {
    btn.addEventListener('click', async (e) => {
        const courseId = e.currentTarget.dataset.courseId;
        const response = await fetch('/student/wishlist/remove', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({courseId})
        });
        if (response.ok) {
            location.reload();
        }
    });
});
</script>